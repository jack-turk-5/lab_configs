[Unit]
Description=Rootless Reverse Proxy via Caddy
Requires=caddy-http.socket caddy-https.socket
After=wireguard.service forgejo.service caddy-http.socket caddy-https.socket

[Container]
ContainerName=caddy
Image=docker.io/caddy:latest
Network=none
Volume=/home/podman/lab_configs/caddy/Caddyfile:/etc/caddy/Caddyfile:Z
Volume=caddy-data:/data:Z
Exec=caddy run --config /etc/caddy/Caddyfile --adapter caddyfile

[Install]
WantedBy=default.target